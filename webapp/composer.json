{
    "name": "jp3cki/fetusjp",
    "description": "fetus.jp",
    "homepage": "https://fetus.jp/",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": ">= 8.0",
        "cweagans/composer-patches": "^1.7",
        "jp3cki/uuid": "^2.0.0",
        "jp3cki/yii2-ubuntu-font": "^1.0.0",
        "kartik-v/yii2-dialog": "^1.0",
        "myclabs/php-enum": "^1.8",
        "scssphp/scssphp": "^1.7.0",
        "twbs/bootstrap-icons": "^1.7",
        "yiisoft/yii2": "~2.0.43",
        "yiisoft/yii2-bootstrap5": "~2.0.2"
    },
    "require-dev": {
        "ext-posix": "*",
        "codeception/codeception": "^4.1.21",
        "codeception/module-asserts": "^1.3.1",
        "codeception/module-filesystem": "^1.0.3",
        "codeception/module-phpbrowser": "^1.0.2",
        "codeception/module-rest": "^1.3.1",
        "codeception/module-yii2": "^1.1.3",
        "codeception/specify": "^1.4.0",
        "codeception/verify": "^2.1.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
        "dominikb/composer-license-checker": "^2.2.0",
        "phpcompatibility/php-compatibility": "^9.3.5",
        "phpstan/phpstan": "*",
        "proget-hq/phpstan-yii2": "*",
        "sirbrillig/phpcs-import-detection": "^1.3.2",
        "sirbrillig/phpcs-variable-analysis": "^2.11.2",
        "slevomat/coding-standard": "^7.0",
        "squizlabs/php_codesniffer": "^3.6.0",
        "symfony/browser-kit": "^5.3.0",
        "yiisoft/yii2-debug": "~2.1.18",
        "yiisoft/yii2-gii": "~2.2.3"
    },
    "replace": {
        "bower-asset/bootstrap": "*",
        "bower-asset/inputmask": "*",
        "bower-asset/jquery": "*",
        "bower-asset/punycode": "*",
        "bower-asset/yii2-pjax": "*",
        "npm-asset/bootstrap": "*"
    },
    "config": {
        "process-timeout": 1800,
        "platform": {
            "php": "8.0.14"
        },
        "sort-packages": true
    },
    "extra": {
      "patches": {
        "kartik-v/yii2-dialog": {
          "Add Japanese translations": "https://github.com/kartik-v/yii2-dialog/pull/48.patch"
        }
      }
    },
    "scripts": {
        "post-install-cmd": [
            "[ $COMPOSER_DEV_MODE -eq 0 ] || ./vendor/bin/codecept build",
            "./yii license/clean-extracted",
            "./yii license/extract"
        ],
        "post-update-cmd": [
            "[ $COMPOSER_DEV_MODE -eq 0 ] || ./vendor/bin/codecept build",
            "./yii license/clean-extracted",
            "./yii license/extract"
        ]
    }
}
